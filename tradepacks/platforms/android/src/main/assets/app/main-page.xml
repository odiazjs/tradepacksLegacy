<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded" cssClass="bg">

  <Page.actionBar>
    <ActionBar title="tradepacks" android.icon=""/> 
  </Page.actionBar>

  <GridLayout
    id="packOptions"
    rows="40, 520"
    horizontalAlignment="center">

    <GridLayout
    id="coins-container"
    rows="30"
    columns="90, 50, 60"
    horizontalAlignment="center">

      <Label text="{{ userInfo.username }}" row="0" col="0"
               horizontalAlignment="left"
               verticalAlignment="center"
               cssClass="username" />

      <Image src="res://coins"
             row="0" col="1"
             horizontalAlignment="center"/>

      <Label text="{{ userInfo.coins }}" row="0" col="2"
               horizontalAlignment="left"
               verticalAlignment="center"
               cssClass="coins" />
 
    </GridLayout>

    <ListView items="{{ packOptions }}" row="1">
      <ListView.itemTemplate tap="selectPack">

        <GridLayout
         rows="75, 75, 75"
         columns="150,175"
         horizontalAlignment="center"
         tap="selectPack">

          <Image id="{{ id }}"
                 row="0" col="0" rowspan="3"
                 src="{{ img }}"
                 cssClass="pack-option-image"/>

          <Label text="{{ display }}"
                   row="0" col="1"
                   horizontalAlignment="center"
                   verticalAlignment="center"
                   cssClass="pack-label" />

          <Label text="{{ desc1 }}"
                       row="1" col="1"
                       textWrap="true"
                       horizontalAlignment="center"
                       verticalAlignment="top"
                       cssClass="pack-label"/>

          <Label text="{{ desc2 }}"
                       row="2" col="1"
                       textWrap="true"
                       horizontalAlignment="center"
                       verticalAlignment="top"
                       cssClass="pack-label"/>

        </GridLayout>

      </ListView.itemTemplate>
    </ListView>
    
  </GridLayout>
</Page>